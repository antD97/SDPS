<UserControl x:Class="SDPS.View.UserControls.LabelledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SDPS.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding LabelText}" Margin="0,0,10,0" Style="{StaticResource StandardText}"/>
        <TextBox Grid.Column="1"/>
        <Button Grid.Column="2" Content="{Binding ExtraBtnContent}" Width="18" Margin="5,0,0,0" Visibility="{Binding ExtraBtnVisibility}"/>
    </Grid>
</UserControl>
