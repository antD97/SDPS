<UserControl x:Class="SDPS.View.UserControls.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SDPS.View.UserControls"
             mc:Ignorable="d"
             Height="25" d:DesignWidth="800">
    <Grid MouseLeftButtonDown="TopBar_MouseLeftButtonDown" Background="#2d7d9a">
        <TextBlock Text="{Binding TitleText}" Margin="7,0,0,0" VerticalAlignment="Center" />
        <Button Click="CloseBtn_Click" Content="✖"
                Width="25" Height="25" HorizontalAlignment="Right"
                Background="Transparent" BorderThickness="0" />
    </Grid>
</UserControl>
