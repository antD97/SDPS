<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Window" x:Key="WindowStyle">
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#111" Opacity="0.9" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TextBlock" x:Key="StandardText">
        <Setter Property="Foreground" Value="#fff" />
    </Style>
    <Style TargetType="TextBlock" x:Key="Header1">
        <Setter Property="Foreground" Value="#fff" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Margin" Value="0,0,0,10" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style TargetType="TextBlock" x:Key="Header2">
        <Setter Property="Foreground" Value="#fff" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="Padding" Value="0" />
        <Setter Property="Foreground" Value="#000" />
    </Style>
    <Style TargetType="Button" x:Key="ThemeColor">
        <Setter Property="Background" Value="#2d7d9a" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="#fff" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>

    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#fff" />
        <Setter Property="CanUserSortColumns" Value="False" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HeadersVisibility" Value="Column" />
        <Setter Property="AutoGenerateColumns" Value="False" />
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled" />
        <Setter Property="GridLinesVisibility" Value="None" />
        <Setter Property="RowBackground" Value="Transparent" />
    </Style>
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="#fff" />
        <Setter Property="BorderThickness" Value="0,0,1,0" />
        <Setter Property="Padding" Value="5,3" />
    </Style>
    <Style TargetType="DataGridCell">
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Foreground" Value="#fff" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderBrush" Value="Transparent" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
